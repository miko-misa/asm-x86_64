{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "asm: build (-g -Og)",
      "type": "shell",
      "command": "gcc",
      "args": [
        "-g",
        "-Og",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}.o"
      ],
      "options": {
        "shell": {
          "executable": "/usr/bin/arch",
          "args": ["-x86_64", "/bin/zsh", "-c"]
        }
      },
      "problemMatcher": "$gcc",
      "presentation": { "reveal": "always", "panel": "dedicated" },
      "hide": true
    },
    {
      "label": "asm: gdb (tui)",
      "type": "shell",
      "command": "zsh",
      "args": [
        "-lc",
        "gdb -q -tui ${fileDirname}/${fileBasenameNoExtension}.o"
      ],
      "options": {
        "shell": {
          "executable": "/usr/bin/arch",
          "args": ["-x86_64", "/bin/zsh", "-c"]
        }
      },
      "presentation": { "reveal": "always", "panel": "dedicated" },
      "hide": true
    },
    {
      "label": "Run: assemble + gdb",
      "dependsOn": ["asm: build (-g -Og)", "asm: gdb (tui)"],
      "dependsOrder": "sequence",
      "group": { "kind": "build", "isDefault": true }
    }
  ]
}
